<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
     integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>ContactMe</title>
</head>
<body>
    <!-- nav barr -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary ">
        <div class="container">
          <a href="/home" class="m-3">
            <img src="/image/logo.png" alt="logo">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
           data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
           aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item m-2 ps-3">
                <a class="nav-link" href="/home">Home</a>
              </li>
              <li class="nav-item m-2">
                <a class="nav-link" href="/addMyProject">Add Project</a>
              </li>
            </ul>
            <div class="d-flex">
                <a href="/contactMe" class="btn bg-black text-white p-2 rounded-3">Contact Me</a>
              </div>
          </div>
        </div>
      </nav>

      <!-- Contact Me-->
      <h2 class="text-center mt-5 mb-3">Get In Touch</h2>
      <div class="row justify-content-center">
        <div class="col-md-5">
            <form>
                <div class="mb-3">
                  <label for="name" class="form-label fw-medium">Name</label>
                  <input type="text" class="form-control" id="name" aria-describedby="name">
                </div>
                <div class="mb-3">
                    <label for="input-email" class="form-label fw-medium">Email</label>
                    <input type="email" class="form-control" id="input-email" aria-describedby="input-email">
                  </div>
                <div class="mb-3">
                  <label for="input-phoneNumber" class="form-label fw-medium">Phone Number</label>
                  <input type="text" class="form-control" id="input-phoneNumber">
                </div>
                <div class="mb-3">
                    <label for="input-subject" class="form-label fw-medium">Subject</label>
                    <select id="input-subject" class="form-select">
                      <option value="" hidden>select</option>
                      <option>Fullstack</option>
                      <option>Frontend</option>
                      <option>Backend</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="input-message" class="form-label fw-medium">Your Messsage</label>
                    <textarea class="form-control" id="input-message" rows="3" style="resize: none;"></textarea>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-dark rounded-5 ps-3 pe-3 ala">Submit</button>
                </div>
              </form>
        </div>
      </div>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" 
integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</html>